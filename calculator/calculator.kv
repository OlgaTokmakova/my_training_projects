<CustButton@Button>:
    font_size: 32

<Container>:
    id: calculator
    display: entry
    rows: 6
    padding: 1
    spacing: 1

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            input_filter: 'float'
            input_type: 'number'


    BoxLayout:
        spacing: 1

        CustButton:
            background_color: 'yellow'
            text: "7"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'yellow'
            text: "8"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'yellow'
            text: "9"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'blue'
            text: "+"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 1

        CustButton:
            background_color: 'yellow'
            text: "4"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'yellow'
            text: "5"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'yellow'
            text: "6"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'blue'
            text: "-"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 1

        CustButton:
            background_color: 'yellow'
            text: "1"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'yellow'
            text: "2"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'yellow'
            text: "3"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'blue'
            text: "*"
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 1

        CustButton:
            background_color: 'yellow'
            text: "0"
            on_press: entry.text += self.text

        CustButton:
            background_color: 'blue'
            text: "AC"
            on_press: entry.text = ""

        CustButton:
            background_color: 'blue'
            text: "."
            on_press: entry.text += self.text

        CustButton:
            background_color: 'blue'
            text: "/"
            on_press: entry.text += self.text

    BoxLayout:

        CustButton:
            background_color: 'red'
            font_size: 20
            text: "="
            on_press: calculator.calculate(entry.text)